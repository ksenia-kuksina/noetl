{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://noetl.io/schemas/playbook.schema.json",
  "title": "NoETL Playbook",
  "type": "object",
  "required": ["apiVersion", "kind", "name", "path", "environment", "context", "workbook", "workflow"],
  "properties": {
    "apiVersion": { "const": "noetl.io/v1" },
    "kind": { "const": "Playbook" },
    "name": { "type": "string" },
    "path": { "type": "string" },

    "environment": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },

    "context": {
      "type": "object",
      "required": ["jobId", "state", "steps", "results"],
      "properties": {
        "jobId": { "type": "string" },
        "state": { "type": "string" },
        "results": { "type": "object" },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["step", "status"],
            "properties": {
              "step": { "type": "string" },
              "status": { "type": "string" }
            }
          }
        }
      },
      "additionalProperties": true
    },

    "workbook": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["task", "run"],
        "properties": {
          "task": { "type": "string" },
          "mode": { "type": "string", "enum": ["parallel", "sequential"] },
          "loop": { "type": "string" },
          "run": {
            "type": "array",
            "items": { "$ref": "#/$defs/unit" }
          }
        }
      }
    },

    "workflow": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step", "run"],
        "properties": {
          "step": { "type": "string" },
          "mode": { "type": "string", "enum": ["parallel", "sequential"] },
          "loop": { "type": "string" },
          "when": { "type": "string" },
          "run": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "task": { "type": "string" },
                "action": { "type": "string" },
                "playbook": { "type": "string" },
                "until": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "next": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["when", "then"],
              "properties": {
                "when": { "type": "string" },
                "then": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "additionalProperties": false
            }
          }
        }
      }
    }
  },

  "$defs": {
    "unit": {
      "type": "object",
      "required": ["action", "method", "name", "desc", "endpoint", "params"],
      "properties": {
        "action": { "type": "string" },
        "method": { "type": "string", "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"] },
        "name": { "type": "string" },
        "desc": { "type": "string" },
        "endpoint": { "type": "string" },
        "params": {
          "type": "object",
          "additionalProperties": true
        },
        "loop": { "type": "string" },
        "mode": { "type": "string", "enum": ["parallel", "sequential"] },
        "run": {
          "type": "array",
          "items": { "$ref": "#/$defs/unit" }
        }
      },
      "additionalProperties": false
    }
  }
}
